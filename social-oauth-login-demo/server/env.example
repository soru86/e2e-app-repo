# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# Local MongoDB: mongodb://localhost:27017/social-oauth-demo
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/social-oauth-demo
MONGODB_URI=mongodb://localhost:27017/social-oauth-demo

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# For Redis Cloud: Update REDIS_HOST and REDIS_PORT with your cloud instance details

# JWT Configuration
# Generate secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Session Secret
# Generate secret using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-key-change-this-in-production-min-32-chars

# OAuth2 Client IDs and Secrets
# ============================================

# Google OAuth Configuration
# 1. Go to https://console.cloud.google.com/
# 2. Create a project and enable Google+ API
# 3. Create OAuth 2.0 credentials
# 4. Add redirect URI: http://localhost:5000/api/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Facebook OAuth Configuration
# 1. Go to https://developers.facebook.com/
# 2. Create a new app and add Facebook Login product
# 3. Add redirect URI: http://localhost:5000/api/auth/facebook/callback
FACEBOOK_APP_ID=your-facebook-app-id-here
FACEBOOK_APP_SECRET=your-facebook-app-secret-here

# GitHub OAuth Configuration
# 1. Go to GitHub Settings > Developer settings > OAuth Apps
# 2. Create a new OAuth App
# 3. Set callback URL: http://localhost:5000/api/auth/github/callback
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# LinkedIn OAuth Configuration
# 1. Go to https://www.linkedin.com/developers/
# 2. Create a new app
# 3. Add redirect URL: http://localhost:5000/api/auth/linkedin/callback
# 4. Request access to: r_emailaddress, r_liteprofile
LINKEDIN_CLIENT_ID=your-linkedin-client-id-here
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret-here

# Frontend URL
# Update this to your frontend URL in production
FRONTEND_URL=http://localhost:3000

